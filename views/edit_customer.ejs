<!DOCTYPE html>
<html lang="en">
  
<head>
    <%- include('./partials/head'); -%>
    
</head>
<body onload="startTime()">
    <%- include('./partials/header_sidebar'); -%>
    
    <!-- tap on top starts-->

        <!-- Page Sidebar Ends-->
        <div class="page-body">
          <div class="container-fluid">
            <div class="page-title">
              <div class="row">
                <div class="col-sm-6">
                  <h3><%=lan.Edit%> <%=lan.Patient%></h3>
                </div>
                <div class="col-sm-6">
                  <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/index"><i data-feather="home"></i></a></li>
                    <li class="breadcrumb-item"><%=lan.Dashboard%></li>
                    <li class="breadcrumb-item active"><%=lan.Edit%> <%=lan.Patient%></li>
                  </ol>
                </div>
              </div>
            </div>
          </div>
          <!-- Container-fluid starts-->
          <div class="container-fluid">
            <div class="row">
                <div class="col-sm-12">
                    <div class="card">
                        <div class="card-body">
                            <form id="edit_signup_form" class="needs-validation" novalidate="" action="/customer/edit_customer/<%=customer[0].id %>" method="post">
                                <div class="row">
                                    <div class="col-12 form-group text-center">
                                      <% if(customer[0].image == null || customer[0].image == ""){ %>
                                        <img class="p-0" id="file-preview" width="150px" height="150px" src="../../images/dashboard/default/profile.png" alt="image">
                                      <% } else { %>
                                        <a href="../../<%= customer[0].image %>" target="_blank"><img class="p-0" id="file-preview" width="150px" height="150px" src="../../<%= customer[0].image %>" alt="image"></a>
                                      <% }; %>
                                    </div>
                                    <div class="col-sm-12 col-md-6 col-lg-6 col-xl-6 form-group">
                                      <label class="col-form-label"><%=lan.Profile%> <%=lan.Image%></label>
                                      <input class="form-control" id="cus_pro_image" style="height: 47px;" type="file" name="image" accept="image/*" onchange="showPreview(event)">
                                    </div>
                                    <div class="col-sm-12 col-md-6 col-lg-6 col-xl-6 form-group">
                                        <label class="col-form-label"><%=lan.Name%></label>
                                        <input class="form-control" id="edit_cus_name" value="<%=customer[0].name %>" type="text" name="Name" placeholder="<%=lan.Enter%> <%=lan.Name%>" required>
                                    </div>
                                    <div class="col-sm-12 col-md-6 col-lg-6 col-xl-6 form-group">
                                        <label class="col-form-label"><%=lan.Email%></label>
                                        <input class="form-control" id="edit_cus_email" value="<%=customer[0].email %>" type="text" name="Email" placeholder="<%=lan.Enter%> <%=lan.Email%>" required>
                                        <input type="hidden" id="edit_email" value="<%=customer[0].email %>">
                                    </div>
                                    <div class="col-sm-12 col-md-6 col-lg-6 col-xl-6 form-group">
                                        <label class="col-form-label"><%=lan.Phone%> <%=lan.Number%>.</label>
                                        <div class="row">
                                            <div class="col-4">
                                                <select class="js-example-basic-single" id="edit_cus_code" name="country_code" required>
                                                    <option value selected disabled><%=lan.Country%></option>
                                                    <% CountryCode.forEach((data, x) => { %>
                                                        <option value="<%= data %>" <%= customer[0].country_code == data ? 'selected' : "" %>> <%= nameCode[x] %> <%= data %> </option>
                                                    <% }) %>
                                                </select>
                                            </div>
                                            <div class="col-8">
                                                <input class="form-control" id="edit_cus_phone" value="<%=customer[0].phone %>" type="number" name="phone" placeholder="<%=lan.Enter%> <%=lan.Phone%> <%=lan.Number%>." required>
                                                <input type="hidden" id="edit_ccode" value="<%=customer[0].country_code %>">
                                                <input type="hidden" id="edit_phone" value="<%=customer[0].phone %>">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-md-6 col-lg-6 col-xl-6 form-group">
                                        <label class="col-form-label"><%=lan.Password%></label>
                                        <input class="form-control" type="password" name="Password"  required>
                                    </div>
                                    <div class="col-sm-12 col-md-6 col-lg-6 col-xl-6 form-group">
                                        <div class="d-flex mb-2" style="margin-top: 40px;">
                                            <div class="icon-state switch-outline">
                                              <label class="switch">
                                                <input type="checkbox" name="status" <%= customer[0].status == 1 ? 'checked' : '' %>><span class="switch-state bg-success"></span>
                                              </label>
                                            </div>
                                            <label class="col-form-label m-l-10"><%=lan.Status%></label>
                                        </div>
                                    </div>
                                    <div class="text-center">
                                        <p class="text-danger d-none mt-3" id="edit_details_error"><%=lan.Please_Enter_All_Detail%>.</p>
                                        <p class="text-danger d-none mt-3" id="edit_email_error"><%=lan.This_Email_Alread_Registered%>.</p>
                                        <p class="text-danger d-none mt-3" id="edit_phone_error"><%=lan.This_Mobile_No_Alread_Registered%>.</p>
                                    </div>
                                </div>
                            </form>
                            <div class="text-end mt-5">
                                <button class="btn btn-square btn-primary btn-air-primary edit_detail_btn b-r-10" id="edit_cus_sign_btn" type="submit"><%=lan.Submit%></button> 
                            </div>
                        </div>
                    </div>
                </div>
            </div>
          </div>
          <!-- Container-fluid Ends-->
        </div>

        <%- include('./partials/footer'); -%>
        <%- include('./partials/script'); -%>
  </body>
</html>