<!DOCTYPE html>
<html lang="en">
  
<head>
    <%- include('./partials/head'); -%>
    
</head>
<body onload="startTime()">
    <%- include('./partials/header_sidebar'); -%>
    
    <!-- tap on top starts-->

        <!-- Page Sidebar Ends-->
        <div class="page-body">
          <div class="container-fluid">
            <div class="page-title">
              <div class="row">
                <div class="col-sm-6">
                  <h3><%= lan.Medicine_List %></h3>
                </div>
                <div class="col-sm-6">
                  <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/index"><i data-feather="home"></i></a></li>
                    <li class="breadcrumb-item"><%=lan.Dashboard%></li>
                    <li class="active breadcrumb-item"><%= lan.Medicine_List %></li>
                  </ol>
                </div>
              </div>
            </div>
          </div>
          <!-- Container-fluid starts-->
          <div class="container-fluid">
            <div class="row">
                <div class="col-sm-12">
                    <div class="card">
                        <div class="d-flex card-header justify-content-end pb-0">
                            <button class="btn btn-primary btn-square b-r-10" type="button" data-bs-toggle="modal" data-bs-target="#add_unitmodal"><%=lan.Add%> <%= lan.Medicine %></button>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive theme-scrollbar">
                                <table class="display" id="basic-1">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th><%= lan.Medicine %> <%=lan.Name%></th>
                                            <th><%=lan.Status%></th>
                                            <th><%=lan.Action%></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% var i = 1 %>
                                        <% vit_phy_list.forEach((data) => { %>
                                            <tr>
                                                <td><%= i %></td>
                                                <td><%= data.name %></td>
                                                <td>
                                                    <% if (data.status == '1') { %>
                                                      <span class="badge badge-success"><%=lan.Active%></span>
                                                    <% } else { %>
                                                      <span class="badge badge-danger"><%=lan.Deactive%></span>
                                                    <% } %>
                                                </td>
                                                <td> 
                                                    <ul class="action"> 
                                                        <li class="edit"><a data-bs-toggle="modal" data-bs-target="#edit_medicine" id="edit_medicine_src" data-id="<%= data.id %>"
                                                            data-name="<%= data.name %>" data-status="<%= data.status %>"><i class="icon-pencil-alt"></i></a></li>
                                                        <li class="delete"><a href="/user/delete_medicine/<%= data.id %>"><i class="icon-trash"></i></a></li>
                                                    </ul>
                                                </td>
                                            </tr>
                                        <% i++ %>
                                        <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
          </div>
          <!-- Container-fluid Ends-->
        </div>

        <div class="modal" id="add_unitmodal" tabindex="-1" role="dialog" aria-labelledby="add_unitmodal" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title"><%=lan.Add%> <%= lan.Medicine %></h5>
                        <button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <form class="needs-validation" novalidate="" action="/user/add_medicine" method="post">
                        <div class="modal-body">
                            <div class="g-3 row">
                                <div class="col-12">
                                    <label class="form-label"><%= lan.Medicine %> <%=lan.Name%></label>
                                    <input class="form-control" type="text" name="name" placeholder="<%=lan.Enter%> <%= lan.Medicine %> <%=lan.Name%>" required>
                                </div>
                                <div class="col-12">
                                    <div class="d-flex mb-2 mt-3">
                                        <div class="icon-state switch-outline">
                                          <label class="switch">
                                            <input type="checkbox" name="status"><span class="bg-success switch-state"></span>
                                          </label>
                                        </div>
                                        <label class="col-form-label m-l-10"><%=lan.Status%></label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button class="btn btn-secondary" type="button" data-bs-dismiss="modal"><%=lan.Close%></button>
                            <button class="btn btn-primary" type="submit"><%=lan.Save%></button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="modal" id="edit_medicine" tabindex="-1" role="dialog" aria-labelledby="edit_medicine" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title"><%=lan.Edit%> <%= lan.Medicine %></h5>
                        <button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <form class="needs-validation" id="medicine_edit_form" novalidate="" action="" method="post">
                        <div class="modal-body">
                            <div class="g-3 row">
                                <div class="col-12">
                                    <label class="form-label"><%= lan.Medicine %> <%=lan.Name%></label>
                                    <input class="form-control" id="medicine_name" type="text" name="name" placeholder="<%=lan.Enter%> <%= lan.Medicine %> <%=lan.Name%>" required>
                                </div>
                                <div class="col-12">
                                    <div class="d-flex mb-2 mt-3">
                                        <div class="icon-state switch-outline">
                                          <label class="switch">
                                            <input type="checkbox" id="medicine_status" name="status"><span class="bg-success switch-state"></span>
                                          </label>
                                        </div>
                                        <label class="col-form-label m-l-10"><%=lan.Status%></label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button class="btn btn-secondary" type="button" data-bs-dismiss="modal"><%=lan.Close%></button>
                            <button class="btn btn-primary" type="submit"><%=lan.Save%></button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    <%- include('./partials/footer'); -%>
    <%- include('./partials/script'); -%>
  </body>
</html>