<!DOCTYPE html>
<html lang="en">
  
<head>
    <%- include('./partials/head'); -%>
    
    <style>
        .hand-hover {
            cursor: pointer;
        }
    </style>
</head>
<body onload="startTime()">
    <%- include('./partials/header_sidebar'); -%>
    
    <!-- tap on top starts-->

        <!-- Page Sidebar Ends-->
        <div class="page-body">
          <div class="container-fluid">
            <div class="page-title">
              <div class="row">
                <div class="col-sm-6">
                  <h3><%=lan.Send%> <%=lan.Notification%></h3>
                </div>
                <div class="col-sm-6">
                  <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/index"><i data-feather="home"></i></a></li>
                    <li class="breadcrumb-item"><%=lan.Dashboard%></li>
                    <li class="breadcrumb-item active"><%=lan.Send%> <%=lan.Notification%></li>
                  </ol>
                </div>
              </div>
            </div>
          </div>
          <!-- Container-fluid starts-->
          <div class="container-fluid">
            <div class="row">
                <% let permiss = per != "1" ? per.send_notifi[1] : "1" %>
                <% if(permiss == "1"){ %>
                <div class="col-sm-12">
                    <div class="card">
                        <div class="card-body">
                            <form id="sendnform" class="needs-validation" novalidate="" action="/settings/snotification" method="post" enctype="multipart/form-data">
                                <div class="row">

                                    <div class="col-12">
                                        <div class="text-center">
                                            <img id="file-preview" width="180" height="180" src="../images/dashboard/default/profile.png" alt="image">
                                        </div>
                                    </div>

                                    <div class="col-sm-12 col-md-6 col-lg-4 col-xl-4 form-group">
                                        <label class="col-form-label"><%=lan.Image%> (<%=lan.Ratio%> 1:1)</label>
                                        <input class="form-control" style="height: 47px;" type="file" name="image" onchange="showPreview(event)">
                                    </div>

                                    <div class="col-sm-12 col-md-6 col-lg-8 col-xl-8">
                                        <label class="col-form-label"><%=lan.Title%></label>
                                        <input class="form-control ncheckd" type="text" name="title" placeholder="<%=lan.Enter%> <%=lan.Title%>" required>
                                    </div>

                                    <div class="col-12">
                                        <label class="col-form-label"><%=lan.Description%> (Optional)</label>
                                        <textarea class="form-control ncheckd" name="description" rows="5"></textarea>
                                    </div>

                                    <div class="col-12 mt-2 d-flex">
                                        <div>
                                            <input class="selecttype" id="selecttype1" type="radio" name="selecttype" value="1" checked>
                                            <label class="col-form-label selecttype m-r-15" for="selecttype1"><%=lan.Send%> <%=lan.All%></label>
                                        </div>
                                        <div>
                                            <input class="selecttype" id="selecttype2" type="radio" name="selecttype" value="2">
                                            <label class="col-form-label selecttype" for="selecttype2"><%=lan.Selected%> <%=lan.User%></label>
                                        </div>
                                    </div>
                                    
                                    <div class="row col-12 mt-3 d-none" id="notiuser">
                                        <div class="col-sm-12 col-md-6 col-lg-4 col-xl-4">
                                            <label class="col-form-label"><%= lan.Customer %> <%=lan.List%></label>
                                            <select class="js-example-basic-single cselect cnofids" id="ancus" name="customer" required>
                                                <option value selected disabled><%=lan.Select%> <%=lan.Customer%></option>
                                                <% customer.forEach(function(cus){ %>
                                                <option value="<%=cus.id%>"><%=cus.name%></option>
                                                <% }) %>
                                            </select>
                                            <div>
                                                <input class="cnofid" id="ancusall" type="checkbox" name="allcustomer">
                                                <label class="col-form-label hand-hover" id="ancusallcus"><%=lan.All%> <%= lan.Customer %></label>
                                            </div>
                                        </div>

                                        <div class="col-sm-12 col-md-6 col-lg-4 col-xl-4">
                                            <label class="col-form-label"><%= lan.Doctor %> <%=lan.List%></label>
                                            <select class="js-example-basic-single cnofids" id="andoc" name="doctor" required>
                                                <option value selected disabled><%=lan.Select%> <%= lan.Doctor %></option>
                                                <% doctor.forEach(function(sitt){ %>
                                                <option value="<%=sitt.id%>"><%=sitt.name%></option>
                                                <% }) %>
                                            </select>

                                            <input class="cnofid" id="andocall" type="checkbox" name="alldoctor">
                                            <label class="col-form-label hand-hover" id="ancusalldoc"><%=lan.All%> <%= lan.Doctor %></label>
                                        </div>

                                        <div class="col-sm-12 col-md-6 col-lg-4 col-xl-4">
                                            <label class="col-form-label"><%= lan.Lab %> <%=lan.List%></label>
                                            <select class="js-example-basic-single cnofids" id="anlab" name="lab" required>
                                                <option value selected disabled><%=lan.Select%> <%= lan.Lab %></option>
                                                <% lab.forEach(function(sitt){ %>
                                                <option value="<%=sitt.id%>"><%=sitt.name%></option>
                                                <% }) %>
                                            </select>

                                            <input class="cnofid" id="anlaball" type="checkbox" name="alllab">
                                            <label class="col-form-label hand-hover" id="ancusalllab"><%=lan.All%> <%= lan.Lab %></label>
                                        </div>

                                    </div>

                                    <div class="text-center">
                                        <p class="text-danger d-none mt-3" id="send_all"><%=lan.Please_Enter_All_Detail%>.</p>
                                    </div>
                                </div>
                            </form>
                            <div class="text-end mt-3">
                                <button class="btn btn-square btn-primary btn-air-primary add_detail_btn b-r-10" id="notificatio_btn" type="submit"><%=lan.Send%> <%=lan.Notification%></button> 
                            </div>
                        </div>
                    </div>
                </div>
                <% } %>


                <div class="col-sm-12">
                    <div class="card">
                        <div class="card-header pb-0">
                            <h6 class="mb-0"><%=lan.Push%> <%=lan.Notification%></h6>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive theme-scrollbar">
                                <table class="display" id="basic-1">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th><%=lan.Title%></th>
                                            <th><%=lan.Description%></th>
                                            <th><%=lan.Image%></th>
                                            <th><%=lan.Customer%></th>
                                            <th><%=lan.Doctor %></th>
                                            <th><%=lan.Lab %></th>
                                            <th><%=lan.Notification%> <%=lan.Count%></th>
                                            <th><%=lan.Status%></th>
                                            <th><%=lan.Resend%></th>
                                            <% let permissions = per != "1" ? per.send_notifi[2] : "1" %>
                                            <% if(permissions == "1"){ %>
                                            <th><%=lan.Action%></th>
                                            <% } %>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% var i = 1 %>
                                        <% ndata.forEach((data) => { %>
                                            <tr>
                                                <td><%= i %></td>
                                                <td><%= data.title.length > 15 ? data.title.slice(0, 15) + '...' : data.title %></td>
                                                <td><%= data.description.length > 15 ? data.description.slice(0, 15) + '...' : data.description %></td>
                                                <td class="p-1">
                                                    <% if(data.image == ""){ %>
                                                        <img width="50px" height="50px" src="../images/dashboard/default/profile.png" alt="image">
                                                    <% } else { %>
                                                        <a href="../../<%= data.image %>" target="_blank"><img width="50px" height="50px" src="../../<%= data.image %>" alt="image" ></a>
                                                    <% }; %>
                                                </td>
                                                <td>
                                                    <% if (data.customer == '' || data.customer == 'All') { %>
                                                        <%- data.customer == 'All' ? lan.All : ''  %>
                                                    <% } else { %>
                                                        <%= data.cus_name %>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <% if (data.doctor == '' || data.doctor == 'All') { %>
                                                        <%- data.doctor == 'All' ? lan.All : ''  %>
                                                    <% } else { %>
                                                        <%= data.doc_name %>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <% if (data.lab == '' || data.lab == 'All') { %>
                                                        <%- data.lab == 'All' ? lan.All : ''  %>
                                                    <% } else { %>
                                                        <%= data.lab_name %>
                                                    <% } %>
                                                </td>
                                                <td><%= data.count %></td>
                                                <td>
                                                    <% if (data.status == '1') { %>
                                                        <span class="badge badge-success"><%=lan.Active%></span>
                                                    <% } else { %>
                                                        <span class="badge badge-danger"><%=lan.Deactive%></span>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <ul class="action"> 
                                                        <li><a href="/settings/neresend/<%= data.id %>"><i class="icon-reload"></i></a></li>
                                                    </ul>
                                                </td>
                                                <% if(permissions == "1"){ %>
                                                <td>
                                                    <ul class="action"> 
                                                    <li class="edit"><a href="/settings/sendit/<%= data.id %>"><i class="icon-pencil-alt"></i></a></li>
                                                    <li class="delete"><a href="/settings/ndelete/<%= data.id %>"><i class="icon-trash"></i></a></li>
                                                    </ul>
                                                </td>
                                                <% } %>
                                            </tr>
                                        <% i++ %>
                                        <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>



            </div>
          </div>
          <!-- Container-fluid Ends-->
        </div>

        <%- include('./partials/footer'); -%>
        <%- include('./partials/script'); -%>
  </body>
</html>