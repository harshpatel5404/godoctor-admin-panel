<!DOCTYPE html>
<html lang="en">
  
<head>
    <%- include('./partials/head'); -%>
    
</head>
<body onload="startTime()">
    <%- include('./partials/header_sidebar'); -%>
    
    <!-- tap on top starts-->

        <!-- Page Sidebar Ends-->
        <div class="page-body">
          <div class="container-fluid">
            <div class="page-title">
              <div class="row">
                <div class="col-sm-6">
                  <h3><%=lan.About%></h3>
                </div>
                <div class="col-sm-6">
                  <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/index"><i data-feather="home"></i></a></li>
                    <li class="breadcrumb-item"><%=lan.Dashboard%></li>
                    <li class="breadcrumb-item active"><%=lan.About%></li>
                  </ol>
                </div>
              </div>
            </div>
          </div>
          <!-- Container-fluid starts-->
          <div class="container-fluid">
            <div class="row">
                <div class="col-sm-12">
                    <div class="card">
                        <div class="card-body">
                            <form class="needs-validation" id="shitter_about_form" novalidate="" action="/user/add_about_data" method="post" >
                                <div class="row">
                                    <div class="">
                                        <button class="btn btn-square btn-primary b-r-6" id="add_new_about" type="button" ><%=lan.New%> <%=lan.Title%></button>
                                    </div>

                                    <% if(head_des == ""){ %>

                                    <div class="" id="add_about">
                                        <div class="border-bottom border-3 pb-4 mt-5" id="row_sitter_about">
                                            <div class="col-12">
                                                <label class="col-form-label"><%=lan.Heading%></label>
                                                <input class="form-control about_input" type="text" name="about_heading" value="" placeholder="<%=lan.Enter%> <%=lan.Heading%>">
                                            </div>
                                            <div class="col-12">
                                                <label class="col-form-label"><%=lan.Description%></label>
                                                <textarea class="form-control about_input" name="about_description" style="width: 100%; height: 90px;" required></textarea>
                                            </div>
                                            <div class="col-12 mt-2 text-end">
                                                <button class="btn btn-square btn-primary b-r-6" id="sitter_add_about" type="button" ><%=lan.Add%></button>
                                            </div>
                                            <div class="" id="about_title_row">
                                                <div class="row col-12" id="add_sitter_service">
                                                    <div class="col-sm-12 col-md-4 col-lg-4 col-xl-4">
                                                        <label class="col-form-label"><%=lan.Title%></label>
                                                        <input class="form-control about_title_input" id="about_first_title" name="title" type="text" value="" placeholder="<%=lan.Enter%> <%=lan.Title%>" >
                                                        <input class="about_id" type="number" name="about_id" value="1" hidden>
                                                    </div>
                                                    <div class="col-sm-12 col-md-2 col-lg-2 col-xl-2 d-flex text-center">
                                                        <div>
                                                            <button class="btn btn-square btn-primary b-r-10 add_icon_click" style="margin-top: 36px;" type="button" data-bs-toggle="modal" data-bs-target="#add_unitmodal"><%=lan.Select%> <%=lan.Icon%></button>
                                                            <input type="hidden" class="about_icon_input" value="0">
                                                        </div>
                                                        <div class="m-l-20 d-flex align-items-end">
                                                            <img id="show_icon" height="45" width="45" src="../images/dashboard/default/profile.png" alt="Image">
                                                            <!-- <label class="form-label f-34 mb-0" style="padding-top: 33px; padding-left: 40px;"><i class="" id="show_icon"></i></label> -->
                                                            <input class="about_input" type="hidden" id="icon_input" name="icon" value="">
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-12 col-md-5 col-lg-5 col-xl-5">
                                                        <label class="col-form-label"><%=lan.Sub%> <%=lan.Title%></label>
                                                        <input class="form-control about_input" type="text" name="about_subtitle" value="" placeholder="<%=lan.Enter%> <%=lan.Sub%> <%=lan.Title%>">
                                                    </div>
                                                    <div class="col-sm-12 col-md-1 col-lg-1 col-xl-1" style="padding-top: 40px;">
                                                        <a type="button" class="mx-4 text-danger delete_all_about"><i class="fa fa-trash-o f-24"></i></a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <% } else { %>

                                        <div class="" id="add_about">

                                            <% let check_one = 0; %>
                                            <% for (let i = 0; i < head_des.length; i++){ %>
                                            <div class="border-bottom border-3 pb-4 mt-5" id="row_sitter_about">
                                                <div class="col-12">
                                                    <label class="col-form-label"><%=lan.Heading%></label>
                                                    <input class="form-control about_input" type="text" name="about_heading" value="<%=head_des[i].head%>" placeholder="<%=lan.Enter%> <%=lan.Heading%>">
                                                </div>
                                                <div class="col-12">
                                                    <label class="col-form-label"><%=lan.Description%></label>
                                                    <textarea class="form-control about_input" name="about_description" style="width: 100%; height: 90px;" required><%=head_des[i].description%></textarea>
                                                </div>
                                                <div class="col-12 mt-2 text-end">
                                                    <button class="btn btn-square btn-primary b-r-6" id="sitter_add_about" type="button" ><%=lan.Add%></button>
                                                </div>
                                                <div class="" id="about_title_row">

                                                <% let aboutd = head_des[i].about %>
                                                <% for (let a = 0; a < aboutd.length; a++){ %>
                                                    <% if (a == 0){ %>

                                                    <div class="row col-12" id="add_sitter_service">
                                                        <div class="col-sm-12 col-md-4 col-lg-4 col-xl-4">
                                                            <label class="col-form-label"><%=lan.Title%></label>
                                                            <input class="form-control about_title_input" id="about_first_title" name="title" type="text" value="<%=head_des[i].title%>" placeholder="<%=lan.Enter%> <%=lan.Title%>" >
                                                            <input class="about_id" type="number" name="about_id" value="<%=aboutd[a].id%>" hidden>
                                                        </div>
                                                        <div class="col-sm-12 col-md-2 col-lg-2 col-xl-2 d-flex text-center">
                                                            <div >
                                                                <button class="btn btn-square btn-primary b-r-10 add_icon_click" style="margin-top: 36px;" type="button" data-bs-toggle="modal" data-bs-target="#add_unitmodal"><%=lan.Select%> <%=lan.Icon%></button>
                                                                <input type="hidden" class="about_icon_input" value="0">
                                                            </div>
                                                            <div class="m-l-20 d-flex align-items-end">
                                                                <img id="show_icon" height="45" width="45" src="../../<%=aboutd[a].icon%>" alt="Image">
                                                                <!-- <label class="form-label f-34 mb-0" style="padding-top: 33px; padding-left: 40px;"><i class="<%=aboutd[a].icon%>" id="show_icon"></i></label> -->
                                                                <input class="about_input" type="hidden" id="icon_input" name="icon" value="<%=aboutd[a].icon%>">
                                                            </div>
                                                        </div>
                                                        <div class="col-sm-12 col-md-5 col-lg-5 col-xl-5">
                                                            <label class="col-form-label"><%=lan.Sub%> <%=lan.Title%></label>
                                                            <input class="form-control about_input" type="text" name="about_subtitle" value="<%=aboutd[a].subtitle%>" placeholder="<%=lan.Enter%> <%=lan.Sub%> <%=lan.Title%>">
                                                        </div>
                                                        <div class="col-sm-12 col-md-1 col-lg-1 col-xl-1" style="padding-top: 40px;">
                                                            <a type="button" class="mx-4 text-danger delete_all_about"><i class="fa fa-trash-o f-24"></i></a>
                                                        </div>
                                                    </div>

                                                <% } else { %>

                                                    <div class="row col-12 mt-2" id="add_sitter_service">
                                                        <div class="col-sm-12 col-md-4 col-lg-4 col-xl-4">
                                                            <input class="form-control about_secound_title" type="text" name="title"  value="" placeholder="<%=lan.Enter%> Title" hidden>
                                                            <input class="about_secound_id" type="number" name="about_id" value="<%=aboutd[a].id%>" hidden>
                                                        </div>
                                                        <div class="col-sm-12 col-md-2 col-lg-2 col-xl-2 d-flex text-center">
                                                            <div >
                                                                <button class="btn btn-square btn-primary b-r-10 add_icon_click" style="margin-top: 36px;" type="button" data-bs-toggle="modal" data-bs-target="#add_unitmodal"><%=lan.Select%> <%=lan.Icon%></button>
                                                                <input type="hidden" class="about_icon_input" value="0">
                                                            </div>
                                                            <div class="m-l-20 d-flex align-items-end">
                                                                <img id="show_icon" height="45" width="45" src="../../<%=aboutd[a].icon%>" alt="Image">
                                                                <!-- <label class="form-label f-34 mb-0" style="padding-top: 33px; padding-left: 40px;"><i class="<%=aboutd[a].icon%>" id="show_icon"></i></label> -->
                                                                <input class="about_input" type="hidden" id="icon_input" name="icon" value="<%=aboutd[a].icon%>">
                                                            </div>
                                                        </div>
                                                        <div class="col-sm-12 col-md-5 col-lg-5 col-xl-5">
                                                            <label class="col-form-label"><%=lan.Sub%> <%=lan.Title%></label>
                                                            <input class="form-control about_input" type="text" name="about_subtitle" value="<%=aboutd[a].subtitle%>" placeholder="<%=lan.Enter%> <%=lan.Sub%> <%=lan.Title%>">
                                                        </div>
                                                        <div class="col-sm-12 col-md-1 col-lg-1 col-xl-1" style="padding-top: 40px;">
                                                            <a type="button" class="mx-4 text-danger delete_about"><i class="fa fa-trash-o f-24"></i></a>
                                                        </div>
                                                    </div>

                                                    <% }; %>

                                                <% }; %>

                                                </div>
                                            </div>
                                            <% }; %>

                                        </div>

                                    <% }; %>

                                    <div class="text-center">
                                        <p class="text-danger d-none mt-3" id="sitter_about_detail_error"><%=lan.Please_Enter_All_Detail%>.</p>
                                    </div>
                                    
                                </div>
                            </form>
                            <div class="text-end mt-5">
                                <button class="btn btn-square btn-primary btn-air-primary add_detail_btn b-r-10" id="sitter_about_field_check" type="submit"><%=lan.Submit%></button> 
                            </div>
                        </div>
                    </div>
                </div>
            </div>
          </div>
          <!-- Container-fluid Ends-->
        </div>

        <div class="modal fade bd-example-modal-lg" id="add_unitmodal" tabindex="-1" role="dialog" aria-labelledby="add_unitmodal" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
                <div class="modal-content">
                    <div class="modal-header p-4">
                        <h5 class="modal-title">Icon List</h5>
                        <button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <form  class="needs-validation" novalidate="" action="/category/add_breed" method="post">
                        <div class="modal-body">
                            <div class="row g-3">
                                <% imagel.forEach((data) => { %>
                                    <div class="col-sm-2 col-md-2 col-lg-2 col-xl-2 text-center" id="about_image_click" data-icon="<%=data.imgname%>">
                                        <img src="<%=data.imgpath%>" width="60" height="60" alt="Image">
                                    </div>
                                <% }) %>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button class="btn btn-secondary" id="icon_list_close" type="button" data-bs-dismiss="modal"><%=lan.Close%></button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <%- include('./partials/footer'); -%>
        <%- include('./partials/script'); -%>
  </body>
</html>