<!DOCTYPE html>
<html lang="en">
  
<head>
    <%- include('./partials/head'); -%>
    
</head>
<body onload="startTime()">
    <%- include('./partials/header_sidebar'); -%>
    
    <!-- tap on top starts-->

        <!-- Page Sidebar Ends-->
        <div class="page-body">
          <div class="container-fluid">
            <div class="page-title">
              <div class="row">
                <div class="col-sm-6">
                  <h3><%= lan.Patient %> <%=lan.List%></h3>
                </div>
                <div class="col-sm-6">
                  <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/index"><i data-feather="home"></i></a></li>
                    <li class="breadcrumb-item"><%=lan.Dashboard%></li>
                    <li class="active breadcrumb-item"><%= lan.Patient %> <%=lan.List%></li>
                  </ol>
                </div>
              </div>
            </div>
          </div>
          <!-- Container-fluid starts-->
          <div class="container-fluid">
            <div class="row">
                <div class="col-sm-12">
                    <div class="card">
                        <% let permiss = per != "1" ? per.patient[1] : "1" %>
                        <% if(permiss == "1"){ %>
                        <div class="d-flex card-header justify-content-end pb-0">
                            <a class="btn btn-primary btn-square b-r-10" href="/customer/add"><%=lan.Add%> <%= lan.Patient %></a>
                        </div>
                        <% } %>
                        <div class="card-body">
                            <div class="table-responsive theme-scrollbar">
                                <table class="display" id="basic-1">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th><%=lan.Image%></th>
                                            <th><%=lan.Name%></th>
                                            <th><%=lan.Email%></th>
                                            <th><%=lan.Phone%> <%=lan.Number%></th>
                                            <th><%=lan.Status%></th>
                                            <% let permissions = per != "1" ? per.patient[2] : "1" %>
                                            <% if(permissions == "1"){ %>
                                            <th><%=lan.Action%></th>
                                            <% } %>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% var i = 1 %>
                                        <% customer.forEach((data) => { %>
                                            <tr>
                                                <td><%= i %></td>
                                                <td class="p-1">
                                                  <% if(data.image == null || data.image == ''){ %>
                                                    <img class="p-0" width="50px" height="50px" src="../images/profile.png" alt="image">
                                                  <% } else { %>
                                                    <a href="../../<%= data.image %>" target="_blank"><img class="p-0" width="50px" height="50px" src="../../<%= data.image %>" alt="image" onerror="this.src='../../images/profile.png'"></a>
                                                  <% }; %>
                                                </td>
                                                <td><%= data.name %></td>
                                                <td><%= data.email %></td>
                                                <td><%= data.country_code %> <%= data.phone %></td>
                                                <td>
                                                  <span class="badge <%= data.status === '1' ? 'badge-success' : 'badge-danger' %>">
                                                    <%= data.status === '1' ? lan.Active : lan.Deactive %>
                                                  </span>
                                                </td>
                                                <% if(permissions == "1"){ %>
                                                <td> 
                                                    <ul class="action"> 
                                                      <li class="edit"> <a href="/customer/edit/<%= data.id%>"><i class="icon-pencil-alt"></i></a></li>
                                                      <li class="delete"><a href="/customer/delete/<%= data.id %>"><i class="icon-trash"></i></a></li>
                                                    </ul>
                                                </td>
                                                <% } %>
                                            </tr>
                                        <% i++ %>
                                        <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
          </div>
          <!-- Container-fluid Ends-->
        </div>
        
        <%- include('./partials/footer'); -%>
        <%- include('./partials/script'); -%>
  </body>
</html>